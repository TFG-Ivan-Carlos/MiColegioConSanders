<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alumno.AlumnoFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/text_alumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Codigo Alumno"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ColegioString"
                android:layout_width="274dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:height="52dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxWidth="100dp"
                android:text="Colegio: "
                android:visibility="gone"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/Colegio"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:hint="Colegio"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ClaseString"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:height="52dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxWidth="100dp"
                android:text="Clase:"
                android:visibility="gone"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/Clase"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:hint="Clase"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/TutorString"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:height="52dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxWidth="100dp"
                android:text="Tutor: "
                android:visibility="gone"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/Tutor"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:hint="Tutor"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>